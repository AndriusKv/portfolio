{
  "name": "Portfolio",
  "description": "",
  "scripts": {
    "scss": "node-sass src/scss/main.scss --source-map-embed src/css/main.css && npm run autoprefixer",
    "autoprefixer": "postcss --use autoprefixer src/css/main.css -d src/css",
    "watch:css": "onchange 'src/scss/*.scss' 'src/scss/imports/*.scss' -- npm run scss",
    "watch": "npm run watch:css",
    "start": "live-server & npm run watch",
    "build:css": "npm run scss && csso ./src/css/main.css ./dist/css/main.css",
    "build:js": "cp ./src/js/main.js ./dist/js",
    "build:assets": "cp -R ./src/assets ./dist",
    "build:others": "cp ./src/{sw.js,CNAME,index.html,favicon.ico} ./dist",
    "prebuild": "rm -rf ./dist && mkdir -p ./dist/{css,js,assets}",
    "build": "npm run build:css && npm run build:js && npm run build:assets && npm run build:others"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.7",
    "babel-eslint": "^6.1.2",
    "csso": "^2.2.1",
    "eslint": "^3.2.2",
    "live-server": "^1.0.0",
    "node-sass": "^3.8.0",
    "onchange": "^2.5.0",
    "postcss-cli": "^2.5.2"
  }
}
